{
  "name": "kanban-orisun-hono-datastar",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "start": "PORT=3011 bun run dist/index.js",
    "type-check": "bun x tsc --watch --noEmit",
    "setup": "bun run db:migrate && bun run db:seed && bun run css:build",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "bun run scripts/migrate.ts",
    "db:seed": "bun run scripts/seed.ts",
    "css:build": "./node_modules/.bin/tailwindcss -i src/input.css -o static/style.css",
    "css:watch": "./node_modules/.bin/tailwindcss -i src/input.css -o static/style.css --watch"
  },
  "dependencies": {
    "@nats-io/jetstream": "^3.2.0",
    "@nats-io/kv": "^3.2.0",
    "@nats-io/transport-node": "^3.2.0",
    "@orisun/eventstore-client": "github:oexza/orisun-node-client",
    "@types/pg": "^8.16.0",
    "charts.css": "^1.2.0",
    "drizzle-orm": "^0.45.1",
    "flat": "^6.0.1",
    "hono": "^4.11.1",
    "hono-sessions": "^0.8.0",
    "pg": "^8.16.3",
    "pino": "^10.0.0",
    "valibot": "1.2.0"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.16",
    "@types/pino": "^7.0.5",
    "bun-types": "latest",
    "daisyui": "^5.3.10",
    "drizzle-kit": "^0.31.8",
    "nodemon": "^3.1.11",
    "pino-pretty": "^13.1.3",
    "tailwindcss": "^4.1.16"
  }
}
